
<%- include('header') -%>


<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Nandy Hub Laundry</h2>
            <span>Log in for the admin user.</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email">
                <!-- <small class="form-text text-muted text-left"></small> -->
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-dark rounded-pill">Submit</button>
        </form>
    </div>
</div>
